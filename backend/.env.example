# Backend Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration
# ============================================
# Neon PostgreSQL connection string
# Format: postgresql://user:password@host:port/database?sslmode=require
# Get this from your Neon dashboard: https://neon.tech
DATABASE_URL=postgresql://user:password@host.neon.tech:5432/database?sslmode=require

# ============================================
# Server Configuration
# ============================================
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
# Development: http://localhost:3000
# Production: Your Vercel frontend URL
FRONTEND_URL=http://localhost:3000

# ============================================
# Authentication
# ============================================
# Generate a secure random string for JWT secret
# You can generate one using: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT token expiration time
JWT_EXPIRES_IN=7d

# ============================================
# Email Service (Resend)
# ============================================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxx

# Resend from email address
# Must be a verified domain in Resend
# For testing, you can use onboarding@resend.dev (limited)
RESEND_FROM_EMAIL=onboarding@resend.dev

# ============================================
# Image Storage (Cloudinary)
# ============================================
# Get these from your Cloudinary dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Cloudinary upload folder/path
CLOUDINARY_UPLOAD_FOLDER=gebeya/products

# ============================================
# Redis (Optional - for caching and sessions)
# ============================================
# Get these from Upstash Redis: https://upstash.com
# Leave empty if not using Redis
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# ============================================
# Scheduler Configuration
# ============================================
# Set to 'true' to enable scheduled notification jobs (daily summaries, weekly reports)
# Set to 'false' or leave empty to disable
ENABLE_SCHEDULERS=true

# ============================================
# Rate Limiting (Optional)
# ============================================
# Maximum number of requests per window (default: 100)
RATE_LIMIT_MAX=100

# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
